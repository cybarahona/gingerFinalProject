<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pw_authenticaion_textview"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:text="Password Authentication" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pw_sign_up_button"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:text="sign up" />

            <Button
                android:id="@+id/pw_sign_in_button"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:text="sign in" />

            <Button
                android:id="@+id/pw_sign_out_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="sign out" />
        </LinearLayout>

        <TextView
            android:id="@+id/google_sign_in_textview"
            android:layout_width="178dp"
            android:layout_height="58dp"
            android:text="Google Sign-In" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/google_sign_in_button"
                android:layout_width="198dp"
                android:layout_height="61dp"
                android:text="sign in" />

            <Button
                android:id="@+id/google_sign_out_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="sign out" />
        </LinearLayout>

        <TextView
            android:id="@+id/facebook_login_textview"
            android:layout_width="187dp"
            android:layout_height="61dp"
            android:text="Facebook login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/facebook_login_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/facebook_logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="log out" />
        </LinearLayout>

        <TextView
            android:id="@+id/twitter_login_textview"
            android:layout_width="186dp"
            android:layout_height="33dp"
            android:text="Twitter login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/twitter_login_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/twitter_logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="log out" />
        </LinearLayout>

        <TextView
            android:id="@+id/github_login_textview"
            android:layout_width="179dp"
            android:layout_height="47dp"
            android:text="Github login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/github_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="log in" />

            <Button
                android:id="@+id/github_logout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="log out" />
        </LinearLayout>

        <TextView
            android:id="@+id/auth_state_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>